
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        text-align: center;
    }

    .game-board {
        margin: 20px auto;
        display: inline-block;
    }

    table {
        border-collapse: collapse;
        margin: 0 auto; /* Centraliza a tabela */
        width: 200px; /* Define uma largura fixa para a tabela */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Adiciona sombra */
        border-radius: 8px; /* Bordas arredondadas */
        background-color: #fff; /* Fundo branco para a tabela */
    }

    td {
        width: 50px;
        height: 50px;
        border: 1px solid #333;
        text-align: center;
        background-color: #e9ecef; /* Cor de fundo das células */
        transition: background-color 0.3s; /* Transição suave */
    }

        td:hover {
            background-color: #d1d1d1; /* Cor ao passar o mouse */
        }

    input[type="text"] {
        width: 100%;
        height: 100%;
        font-size: 24px;
        text-align: center;
        border: none;
        outline: none;
    }

    .submit-button {
        margin-top: 20px;
        padding: 10px 20px;
        font-size: 16px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .submit-button:hover {
            background-color: #218838;
        }

    .winner-message {
        font-size: 20px;
        color: #d9534f;
        margin-top: 20px;
    }
</style>

<h1>Jogo da Velha</h1>

<form id="JogoVelhaForm" method="post" asp-action="Index" asp-controller="JogoVelha">
    <table>
        @for (int i = 0; i < 3; i++) // Loop para as linhas
        {
                <tr>
                @for (int j = 0; j < 3; j++) // Loop para as colunas
                {
                            <td>
                                <input type="text" name="A@(i)@(j)" maxlength="1" pattern="[XO]" required />
                            </td>
                }
                </tr>
        }
    </table>
    <input type="submit" value="Validar" />
</form>

@if (Model.ganhador != null)
{
        <p>@Model.ganhador</p>
}